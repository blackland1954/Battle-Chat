<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal">
    <fragment
        android:id="@+id/fragment_list_contacts"
        android:tag="ContactListFragment"
        android:name="com.ninetwozero.battlechat.fragments.ContactListFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.67"/>
    <fragment
        android:id="@+id/fragment_chat"
        android:tag="ChatFragment"
        android:name="com.ninetwozero.battlechat.fragments.ChatFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.33"/>
</LinearLayout>